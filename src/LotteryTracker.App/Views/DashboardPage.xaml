<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LotteryTracker.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:LotteryTracker.App.Controls"
    xmlns:converters="using:LotteryTracker.App.Converters"
    xmlns:entities="using:LotteryTracker.Core.Entities">

    <Page.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToStringConverter x:Key="StatusToStringConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <ProgressRing
            IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
            Width="48"
            Height="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <!-- Main Content -->
        <ScrollViewer
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
            <StackPanel Padding="24" Spacing="24">
                <!-- Header -->
                <Grid>
                    <TextBlock
                        Text="Dashboard"
                        Style="{StaticResource TitleTextBlockStyle}"/>
                    <Button
                        Content="Add Ticket"
                        HorizontalAlignment="Right"
                        Style="{StaticResource AccentButtonStyle}"
                        Command="{x:Bind ViewModel.AddNewTicketCommand}">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="N" Modifiers="Control"/>
                        </Button.KeyboardAccelerators>
                    </Button>
                </Grid>

                <!-- Stats Cards -->
                <StackPanel Spacing="8">
                    <TextBlock
                        Text="Overview"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <controls:StatCard
                            Title="Total Spent"
                            Value="{x:Bind FormatCurrency(ViewModel.OverallStats.TotalSpent), Mode=OneWay}"
                            Subtitle="{x:Bind FormatTicketCount(ViewModel.OverallStats.TotalTickets), Mode=OneWay}"/>

                        <controls:StatCard
                            Title="Total Won"
                            Value="{x:Bind FormatCurrency(ViewModel.OverallStats.TotalWon), Mode=OneWay}"/>

                        <controls:StatCard
                            Title="Net Profit/Loss"
                            Value="{x:Bind FormatCurrency(ViewModel.OverallStats.NetProfit), Mode=OneWay}"/>

                        <controls:StatCard
                            Title="Win Rate"
                            Value="{x:Bind FormatPercent(ViewModel.OverallStats.WinRate), Mode=OneWay}"
                            Subtitle="{x:Bind FormatWinCount(ViewModel.OverallStats.WinningTickets), Mode=OneWay}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Quick Stats Row -->
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <controls:StatCard
                        Title="Pending"
                        Value="{x:Bind ViewModel.OverallStats.PendingTickets.ToString(), Mode=OneWay, FallbackValue='0'}"/>

                    <controls:StatCard
                        Title="Winners"
                        Value="{x:Bind ViewModel.OverallStats.WinningTickets.ToString(), Mode=OneWay, FallbackValue='0'}"/>

                    <controls:StatCard
                        Title="No Wins"
                        Value="{x:Bind ViewModel.OverallStats.LosingTickets.ToString(), Mode=OneWay, FallbackValue='0'}"/>
                </StackPanel>

                <!-- Recent Tickets -->
                <StackPanel Spacing="8">
                    <Grid>
                        <TextBlock
                            Text="Recent Tickets"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <HyperlinkButton
                            Content="View All"
                            HorizontalAlignment="Right"
                            Command="{x:Bind ViewModel.ViewAllTicketsCommand}"/>
                    </Grid>

                    <!-- Empty State -->
                    <Border
                        x:Name="EmptyStatePanel"
                        Visibility="Collapsed"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="32">
                        <StackPanel HorizontalAlignment="Center" Spacing="12">
                            <FontIcon Glyph="&#xE7C3;" FontSize="48" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                            <TextBlock
                                Text="No tickets yet"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                HorizontalAlignment="Center"/>
                            <TextBlock
                                Text="Add your first lottery ticket to start tracking"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"/>
                            <Button
                                Content="Add Your First Ticket"
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0"
                                Command="{x:Bind ViewModel.AddNewTicketCommand}"/>
                        </StackPanel>
                    </Border>

                    <!-- Ticket List -->
                    <ListView
                        x:Name="TicketListView"
                        ItemsSource="{x:Bind ViewModel.RecentTickets, Mode=OneWay}"
                        SelectionMode="None"
                        IsItemClickEnabled="True"
                        ItemClick="TicketList_ItemClick">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="entities:Ticket">
                                <Grid
                                    Padding="12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Indicator -->
                                    <Ellipse
                                        Grid.Column="0"
                                        Width="12"
                                        Height="12"
                                        Fill="{x:Bind Status, Converter={StaticResource StatusToColorConverter}}"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"/>

                                    <!-- Ticket Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock
                                            Text="{x:Bind PurchaseDate.ToString('MMM dd, yyyy', x:Null)}"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock
                                            Text="{x:Bind StoreName}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <!-- Status -->
                                    <TextBlock
                                        Grid.Column="2"
                                        Text="{x:Bind Status, Converter={StaticResource StatusToStringConverter}}"
                                        VerticalAlignment="Center"
                                        Margin="12,0"
                                        Foreground="{x:Bind Status, Converter={StaticResource StatusToColorConverter}}"/>

                                    <!-- Price -->
                                    <TextBlock
                                        Grid.Column="3"
                                        Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}}"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Quick Actions -->
                <StackPanel Spacing="8">
                    <TextBlock
                        Text="Quick Actions"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Command="{x:Bind ViewModel.AddNewTicketCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                <TextBlock Text="Add Scratch-Off"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{x:Bind ViewModel.AddNewTicketCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                <TextBlock Text="Add Draw Game"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{x:Bind ViewModel.ViewStatisticsCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE9D2;" FontSize="16"/>
                                <TextBlock Text="View Statistics"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

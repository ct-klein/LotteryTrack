<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LotteryTracker.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Loading Overlay -->
        <ProgressRing
            x:Name="LoadingRing"
            Width="48"
            Height="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <!-- Main Content -->
        <ScrollViewer x:Name="MainContent">
            <StackPanel Padding="24" Spacing="24">
                <!-- Header -->
                <Grid>
                    <TextBlock
                        Text="Dashboard"
                        Style="{StaticResource TitleTextBlockStyle}"/>
                    <Button
                        x:Name="AddTicketButton"
                        Content="Add Ticket"
                        HorizontalAlignment="Right"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="AddTicketButton_Click">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="N" Modifiers="Control"/>
                        </Button.KeyboardAccelerators>
                    </Button>
                </Grid>

                <!-- Stats Cards -->
                <StackPanel Spacing="8">
                    <TextBlock
                        Text="Overview"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16" MinWidth="150">
                            <StackPanel>
                                <TextBlock Text="Total Spent" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="TotalSpentText" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <TextBlock x:Name="TotalTicketsText" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16" MinWidth="150">
                            <StackPanel>
                                <TextBlock Text="Total Won" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="TotalWonText" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16" MinWidth="150">
                            <StackPanel>
                                <TextBlock Text="Net Profit/Loss" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="NetProfitText" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16" MinWidth="150">
                            <StackPanel>
                                <TextBlock Text="Win Rate" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="WinRateText" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <TextBlock x:Name="WinCountText" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Quick Stats Row -->
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="16" MinWidth="120">
                        <StackPanel>
                            <TextBlock Text="Pending" Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="PendingCountText" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="16" MinWidth="120">
                        <StackPanel>
                            <TextBlock Text="Winners" Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="WinnersCountText" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="16" MinWidth="120">
                        <StackPanel>
                            <TextBlock Text="No Wins" Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="LosersCountText" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Recent Tickets -->
                <StackPanel Spacing="8">
                    <Grid>
                        <TextBlock
                            Text="Recent Tickets"
                            Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <HyperlinkButton
                            x:Name="ViewAllButton"
                            Content="View All"
                            HorizontalAlignment="Right"
                            Click="ViewAllButton_Click"/>
                    </Grid>

                    <!-- Empty State -->
                    <Border
                        x:Name="EmptyStatePanel"
                        Visibility="Collapsed"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="32">
                        <StackPanel HorizontalAlignment="Center" Spacing="12">
                            <FontIcon Glyph="&#xE7C3;" FontSize="48" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                            <TextBlock
                                Text="No tickets yet"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                HorizontalAlignment="Center"/>
                            <TextBlock
                                Text="Add your first lottery ticket to start tracking"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"/>
                            <Button
                                Content="Add Your First Ticket"
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Center"
                                Margin="0,8,0,0"
                                Click="AddTicketButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Ticket List -->
                    <ListView
                        x:Name="TicketListView"
                        SelectionMode="None"
                        IsItemClickEnabled="True"
                        ItemClick="TicketList_ItemClick"
                        ContainerContentChanging="TicketListView_ContainerContentChanging">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Padding="12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Indicator -->
                                    <Ellipse
                                        x:Name="StatusIndicator"
                                        Grid.Column="0"
                                        Width="12"
                                        Height="12"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"/>

                                    <!-- Ticket Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock
                                            x:Name="PurchaseDateText"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock
                                            x:Name="StoreNameText"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <!-- Status -->
                                    <TextBlock
                                        x:Name="StatusText"
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        Margin="12,0"/>

                                    <!-- Price -->
                                    <TextBlock
                                        x:Name="PriceText"
                                        Grid.Column="3"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Quick Actions -->
                <StackPanel Spacing="8">
                    <TextBlock
                        Text="Quick Actions"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Click="AddTicketButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                <TextBlock Text="Add Scratch-Off"/>
                            </StackPanel>
                        </Button>

                        <Button Click="AddTicketButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                <TextBlock Text="Add Draw Game"/>
                            </StackPanel>
                        </Button>

                        <Button Click="ViewStatisticsButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE9D2;" FontSize="16"/>
                                <TextBlock Text="View Statistics"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
